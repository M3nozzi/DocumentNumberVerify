<style>
  .formulario-filho{
    display: flex;
    justify-content: center;
  }

  .formulario {
    margin: 1em;
  }

  .formulario-pai {
    width: 100%;
    display: flex;
    justify-content: center;
    flex-direction: column;
  }

  .descricao {
    text-align: center;
    margin-top: 5%;
  }

  .botao {
    margin: auto;
    margin-bottom: 3em;
  }

  .alertdisplay {
    display: flex;
    justify-content: space-around;
    width: 50%;
    margin: auto;
  }

</style>

<form class="formulario-pai" method="post" action="/concessionaires/test">
  <div class="descricao">
    <h1>Insira os números do pagamento de concessionária a ser testado:</h1>
  </div>
  <div class="formulario-filho">
    <div class="formulario">
      <input name="field1" maxlength="11" size="12">
      <input name="field1dv" maxlength="1" size="2">
    </div>
    <div class="formulario">
      <input name="field2" maxlength="11" size="12">
      <input name="field2dv" maxlength="1" size="2">
    </div>
    <div class="formulario">
      <input name="field3" maxlength="11" size="12">
      <input name="field3dv" maxlength="1" size="2">
    </div>
    <div class="formulario">
      <input name="field4" maxlength="11" size="12">
      <input name="field4dv" maxlength="1" size="2">
    </div>
    <div class="formulario">
      <input type="checkbox" name="data">Tem data de vencimento? </input>
    </div>
  </div>
  <button type="submit" class="botao btn">Testar</button>


  <a class="btn" href="/" role="button">Voltar</a>
</form>

{{#if error}}
<div class="alert alert-danger alertdisplay" role="alert">
  A linha digitada não é válida!<br>
  Erro: {{description}}
</div>
{{/if}}

{{#if success}}
<div class="alert alert-success alertdisplay" role="alert">
  A linha digitada é válida! <br>
  Dados: <br>
  <ul>
    <li>Código de barras: {{data.codeBar}};</li>
    <li>Vencimento: {{data.DueDate}}</li>
    <li>Valor: R$ {{data.value}}</li>
  </ul>
</div>
{{/if}}
