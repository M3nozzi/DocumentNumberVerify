
<form class="Form" method="post" action="/banks/test">
  <div class="Title">
    <h1>Digite os números do boleto do tipo bancário</h1>
  </div>
  <div class="FormAll">
    <div class="FormEach">
      <input name="field1i" maxlength="5" size="5">
      <b>.</b>
      <input name="field1ii" maxlength="5" size="5">
    </div>
    <div class="FormEach">
      <input name="field2i" maxlength="5" size="5">
      <b>.</b>
      <input name="field2ii"  maxlength="6" size="6">
    </div>
    <div class="FormEach">
      <input name="field3i" maxlength="5" size="5">
      <b>.</b>
      <input name="field3ii" maxlength="6" size="6">
    </div>
    <div class="FormEach">
      <input name="field4" maxlength="1" size="1">
    </div>
    <div class="FormEach">
      <input name="field5" maxlength="14" size="15">
    </div>
  </div>
  <button type="submit" class="Button btn">Validar Boleto</button>

  {{#if error}}
  <div class="alert alert-danger alertdisplay" role="alert">
    A linha digitada não é válida!<br>
    {{description}}
  </div>
  {{/if}}

  {{#if success}}
  <div class="alert alert-success alertdisplay" role="alert">
    A linha digitada é válida
    <ul>
      <li>Código de barras: {{data.codeBar}};</li>
      <li>Vencimento: {{data.due}}</li>
      <li>Valor: R$ {{data.value}}</li>
    </ul>
  </div>
  {{/if}}

  <a class="Home" href="/" role="button">Home</a>
</form>


